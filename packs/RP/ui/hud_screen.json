  "thirst_icon_template": {
    "type": "panel",
    "size": [8, 9],
    "controls": [
      {
        "thirst_icon_empty": {
          "type": "image",
          "$update_string": "updateThirst:",
          "texture": "textures/droplet_empty",
          "layer": 0,
          "$condition|default": 20,
          "$condition_half": "($condition - 1)",
          "controls": [
            {
              "data_control": {
                "type": "panel",
                "size": [0, 0],
                "bindings": [
                  {
                    "binding_name": "#hud_title_text_string"
                  },
                  {
                    "binding_name": "#hud_title_text_string",
                    "binding_name_override": "#preserved_text",
                    "binding_condition": "visibility_changed"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(not (#hud_title_text_string = #preserved_text) and not ((#hud_title_text_string - $update_string) = #hud_title_text_string))",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "thirst_icon_full": {
                "type": "image",
                "texture": "textures/droplet_full",
                "layer": 2,
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "data_control",
                    "resolve_sibling_scope": true,
                    "source_property_name": "((#preserved_text - $update_string) * 1)",
                    "target_property_name": "#thirst_value"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "((#thirst_value = $condition) or (#thirst_value > $condition))",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "thirst_icon_half": {
                "type": "image",
                "texture": "textures/droplet_half",
                "layer": 1,
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "data_control",
                    "resolve_sibling_scope": true,
                    "source_property_name": "((#preserved_text - $update_string) * 1)",
                    "target_property_name": "#thirst_value"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#thirst_value = $condition_half)",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "thirst_bar_icons": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["default", 8],
    "bindings": [
